{% extends 'layouts/back_base_manager.html.twig' %}

{% block title %}Mise  à jour de {{ item.category.name }}
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header card-header-primary">
					<h4 class="card-title text-center">Mise à jour  de {{ item.category.name }}</h4>
					{{ fileUploadingInfos }}
				</div>
				<div class="card-body">
					{{ include('pages/crud/item/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

					<div class="row text-center">
						<div class="col-md-6">
							<div class="form-group">
								{{ include('pages/crud/item/_delete_form.html.twig') }}
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<a href="{{ path('item_index') }}"><button class="btn btn-info">Liste des biens</button></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
