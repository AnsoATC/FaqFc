<!DOCTYPE html>

<title>Hello ForumController!</title>

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

<div class="example-wrapper">
		<h1>Message sans réponse</h1>

		{% if  messages|length >=1 %}
			{% for message in messages %}
				<li>

					<a href="{{ path('forum_response_of_message',{id: message.id }) }}">{{ message.title }}</a>

					{{ message.viewed }}

					{{ message.replies }}
					<a href="{{ path('forum_message_of_author',{id: message.user.id }) }}">{{ message.user.email }}</a>


				</li>
			{% endfor %}
		{% else %}
			Aucun message sans réponse
			
		{% endif %}
	</div>
{% endblock %}
