{% extends 'base.html.twig' %}

{% block title %}FcCategory index{% endblock %}

{% block body %}
    <h1>FcCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Topic</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fc_category in fc_categories %}
            <tr>
                <td>{{ fc_category.id }}</td>
                <td>{{ fc_category.topic }}</td>
                <td>{{ fc_category.createdAt ? fc_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('fc_category_show', {'id': fc_category.id}) }}">show</a>
                    <a href="{{ path('fc_category_edit', {'id': fc_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fc_category_new') }}">Create new</a>
{% endblock %}
