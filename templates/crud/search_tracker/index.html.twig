{% extends 'base.html.twig' %}

{% block title %}SearchTracker index{% endblock %}

{% block body %}
    <h1>SearchTracker index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>FaqFoundResult</th>
                <th>FcFoundResult</th>
                <th>SearchedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for search_tracker in search_trackers %}
            <tr>
                <td>{{ search_tracker.id }}</td>
                <td>{{ search_tracker.question }}</td>
                <td>{{ search_tracker.faqFoundResult }}</td>
                <td>{{ search_tracker.fcFoundResult }}</td>
                <td>{{ search_tracker.searchedAt ? search_tracker.searchedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('search_tracker_show', {'id': search_tracker.id}) }}">show</a>
                    <a href="{{ path('search_tracker_edit', {'id': search_tracker.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('search_tracker_new') }}">Create new</a>
{% endblock %}
